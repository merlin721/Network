<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/audio_main_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/answer_custom_audio_bg"
      android:orientation="vertical"
      >
    <LinearLayout
        android:id="@+id/audio_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/play_img"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/d_5"
          android:src="@drawable/audio_play_btn_drawable"
          />

      <TextView
          android:id="@+id/current"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="00:00"
          android:textColor="@color/col_aaabb3"
          android:textSize="@dimen/dp_10"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="/"
          android:textColor="@color/col_aaabb3"
          android:textSize="@dimen/dp_10"
          />
      <TextView
          android:id="@+id/total"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="00:00"
          android:textColor="@color/col_aaabb3"
          android:textSize="@dimen/dp_10"
          />

      <SeekBar
          android:id="@+id/audio_seek_progress"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1.0"
          android:background="@null"
          android:max="10000"
          android:maxHeight="3dp"
          android:minHeight="3dp"
          tools:progress="5000"
          android:paddingBottom="8dp"
          android:paddingLeft="12dp"
          android:paddingRight="12dp"
          android:paddingTop="8dp"
          android:progressDrawable="@drawable/audio_bottom_seek_progress"
          android:thumb="@drawable/audio_seekbar_dot"
          />


      <ImageView
          android:id="@+id/audio_more"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/cover_del"
          />
    </LinearLayout>
    <EditText
        android:id="@+id/describe_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d_5"
        android:layout_marginTop="@dimen/d_5"
        android:background="@color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lineSpacingExtra="1dp"
        android:lineSpacingMultiplier="1"
        android:paddingBottom="@dimen/d_5"
        android:paddingTop="@dimen/d_5"
        android:textColor="@color/col_555555"
        android:textSize="@dimen/s_15"
        />
  </LinearLayout>

  <EditText
      android:id="@+id/describe_next_edit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/d_5"
      android:layout_marginTop="@dimen/d_5"
      android:background="@color/transparent"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:lineSpacingExtra="1dp"
      android:lineSpacingMultiplier="1"
      android:paddingBottom="@dimen/d_5"
      android:paddingTop="@dimen/d_5"
      android:textColor="@color/col_555555"
      android:textSize="@dimen/s_15"
      />
</LinearLayout>
