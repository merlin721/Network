<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
      >
    <EditText
        android:id="@+id/edit_arouter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/arouter_edit_background"
        android:textColor="@color/colorWhite"
        />
    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        />
    <TextView
        android:id="@+id/arouter_go"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@drawable/arouter_button_background"
        android:gravity="center"
        android:text="GO"
        android:textColor="#ff31CAC4"
        />
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1.0px"
      android:layout_marginTop="5dp"
      android:background="@color/colorWhite"
      />
  <ListView
      android:id="@+id/arouterListView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:divider="@android:color/white"
      android:dividerHeight="1.0px"
      android:listSelector="@android:color/transparent"
      android:scrollbars="none"
      />
</LinearLayout>