<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/feedback_top_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/feedback_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/d_20"
            android:src="@drawable/nav_ic_back" />

        <com.merlin.time.view.TimeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textColor="@color/black"
            android:textSize="@dimen/s_16" />

        <!--<com.merlin.time.view.TimeTextView-->
        <!--android:id="@+id/feedback_send_tv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="@dimen/d_16"-->
        <!--android:text="发送"-->
        <!--android:textColor="@color/feedback_top_right"-->
        <!--android:textSize="@dimen/s_16" />-->
    </RelativeLayout>

    <com.merlin.time.view.TimeTextView
        android:id="@+id/feedback_top_tips"
        android:layout_below="@+id/feedback_top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/d_24"
        android:paddingEnd="@dimen/d_24"
        android:paddingTop="@dimen/d_10"
        android:paddingBottom="@dimen/d_10"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/s_15"
        android:background="@color/chuck_status_f3f4f5"
        android:textColor="@color/color_999999"
        android:text="咱们的客服同学比较忙，可能回复的比较慢，但会有问必答的。" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/feedback_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/feedback_bottom_ll"
        android:layout_below="@+id/feedback_top_tips" />

    <LinearLayout
        android:id="@+id/feedback_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_40"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/d_24"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="@dimen/d_10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/feedback_input"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_40"
            android:layout_marginRight="@dimen/d_10"
            android:layout_weight="1"
            android:background="@drawable/feedback_bg"
            android:hint="@string/my_center_feedback_hint"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:paddingLeft="@dimen/d_16"
            android:textColor="@color/color_text_color"
            android:textColorHint="@color/color_cccccc"
            android:textSize="16sp" />

        <com.merlin.time.view.TimeTextView
            android:id="@+id/feedback_send_tv"
            android:layout_width="100dp"
            android:layout_height="@dimen/d_40"
            android:background="@color/color_blue"
            android:gravity="center"
            android:text="提交"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>