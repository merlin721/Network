<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    >

  <com.merlin.time.view.TimeTextView
      android:id="@+id/login_top_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/d_40"
      android:layout_marginTop="@dimen/d_74"
      android:text="@string/login_input_phone_num"
      android:textColor="@color/color_text_color"
      android:textSize="@dimen/s_24"
      />
  <EditText
      android:id="@+id/login_ed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/login_top_tv"
      android:layout_marginLeft="@dimen/d_40"
      android:layout_marginRight="@dimen/d_40"
      android:layout_marginTop="@dimen/d_50"
      android:hint="@string/login_input_phone_num_hint"
      android:textColor="@color/color_text_color"
      android:textSize="28sp"
      android:outlineAmbientShadowColor="@color/colorPrimary"
      android:inputType="phone"
      />

  <ImageView
      android:id="@+id/login_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/login_ed"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/d_33"
      android:padding="@dimen/d_10"
      android:visibility="gone"
      android:layout_marginBottom="@dimen/d_5"
      android:src="@drawable/audio_pause_icon_normal"
      />
  <com.merlin.time.view.TimeTextView
      android:id="@+id/login_enter_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="@dimen/d_40"
      android:layout_marginRight="@dimen/d_24"
      android:background="@drawable/login_enter_bg_sel"
      />
</RelativeLayout>