<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.merlin.time.view.TimeImageView
        android:id="@+id/feedback_send_head_img"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/d_10"
        android:layout_marginEnd="@dimen/d_24"
        android:src="@drawable/my_img_head_default" />

    <com.merlin.time.view.TimeTextView
        android:id="@+id/feedback_send_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/feedback_send_head_img"
        android:paddingStart="@dimen/d_15"
        android:paddingEnd="@dimen/d_15"
        android:paddingTop="@dimen/d_10"
        android:background="@drawable/feedback_bg"
        android:layout_marginStart="70dp"
        android:paddingBottom="@dimen/d_10"
        android:text="你好，有人吗？你好，有人吗？你好有人吗？你好有人吗？你好有人吗？你好" />
</RelativeLayout>